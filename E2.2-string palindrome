#include<stdio.h>
#include<string.h>
int main() {
    char s1[20];
    int i,l,flag=0;
    printf("N.Eragam reddy--192211729\n");
    printf("Enter a string: ");
    gets(s1);
    l = strlen(s1);
    for(i=0;i<l/2;i++){
        if(s1[i]!=s1[l-i-1]){
            flag = 1;
            break;
        }
    }
    if(flag){
        printf("%s is not a palindrome\n",s1);
    } else {
        printf("%s is a palindrome\n",s1);
    }
    return 0;
}
